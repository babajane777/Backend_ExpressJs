<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        ::-webkit-scrollbar {
            width: 10px;
        }
    </style>
</head>

<body>
    <div
        style="width:95%; height:98%; display:flex; top: 70px; flex-direction: row;justify-content: space-around; background-color:#f4f9fa; padding:20px; margin:auto;">
        <div style="width: 60%; height: 90%; margin-top: 70px; overflow-y: scroll; ;">
            <% for(post of posts) {%>
                <ul style="list-style-type: none;">
                    <li>
                        <div class="card"
                            style="width: 95%; height:auto; position: relative; background-color: #dfeaf3de;margin-left:2px ; box-shadow: 0 0 5px ;padding:15px; display:flex; flex-direction: column; justify-content: space-between;">
                            <div class="card-body"
                                style="position: relative; margin:auto; padding:20px; background-color: #fafcfe7e; width:90%; height:auto;">
                                <p class="card-text" style="font-family:'Sans';">
                                    <b>
                                        <%= post.post %>
                                    </b>
                                </p>
                            </div>
                            <img src="<%=post.image%>" class="card-img-top" alt="image"
                                style="width:70%; height:250px; position:relative; margin:auto; margin-top:10px ;box-shadow: 0 0 10px;">
                            <!-- <div class="card-body" -->
                            <!-- style="position: relative; margin:auto;padding:10px; width:60%; height:auto;"> -->
                            <!-- <p class="card-text">
                                    <%= post.post %>
                                </p> -->

                            <div
                                style="height:auto; width:40%; padding:25px; display:flex; flex-direction: row; justify-content: space-between;">
                                <div
                                    style="width:70px; box-shadow:0px 0px 2px; height:auto; margin:auto; display:flex ;border-radius: 1rem; background-color: rgb(241, 240, 238); flex-direction: row; justify-content: space-around; text-align: center;  padding:5px">
                                    <i class="fa fa-thumbs-up" style="font-size:14px; margin: auto"></i>
                                    <p style="font-size:x-small; margin: auto;">12</p>
                                </div>
                                <div
                                    style="width:70px; height:auto; box-shadow:0px 0px 2px; margin:auto; display:flex ;border-radius: 1rem; background-color: rgb(239, 239, 234); flex-direction: row; justify-content: space-around; text-align: center; padding:5px">
                                    <i class="fa fa-thumbs-down" style="font-size:14px; margin: auto"></i>
                                    <p style="font-size:x-small; margin: auto;">12</p>
                                </div>

                            </div>

                            <!-- </div> -->
                            <div style=" height:auto; width:100%; padding:10px; background-color: rgb(222, 236, 249);">
                                <form action="/comment/createcomment" method="POST">
                                    <!-- <label><p style="font-size:small;">Comments</p></label><br> -->
                                    <input
                                        style="margin:auto; width:70%; border-radius: 0.5rem; border: 0.1px solid grey; padding:5px"
                                        placeholder="leave your comment here" name="comment">
                                    <input type="hidden" name="post" value="<%= post._id %>">
                                    <button type="submit" style="border:none;  background-color: #d8f6ff">
                                        <i class="fa fa-arrow-right" style="font-size:15px; color: grey;">
                                        </i>
                                    </button>
                                </form>
                            </div>
                            <% for(comment of post.comments){%>
                                <ul>
                                    <li style="list-style: none;display:flex; flex-direction: column; padding:10px;">
                                        <div
                                            style="height:auto; position: relative; left:10px; width:100%; padding:5px; background-color:white; box-shadow: 0px 0px 5px;">
                                            <p style="font-size: small; padding: 10px;">
                                                
                                                    <%=comment.comment%>

                                                
                                               
                                            </p>
                                            <p style="font-size: x-small; padding: 5px;">
                                                
                                                  <!-- <%=comment.user.username%><br> -->
                                                  <%=comment.user.email%>
                                                
                                            </p>
                                        </div>
                                    </li>
                                </ul>
                            <% } %>
                        </div>
                    </li>
                </ul>
                <% }%>
        </div>
        <div
            style="width:30%; height:91%; background-color: #3d464d; margin-top: 68px; margin-bottom: 70px; text-align: center; padding-top:90px; padding-left:10px; border-radius: 0.5rem;">

            <a href=""
                style="text-decoration: none;color: rgb(232, 208, 24); font-family:'Lucida Sans'; font-size:xx-small;">
                <h5 style="font-size: 1rem;"> My profile</h5>
            </a>

        </div>

</body>

</html>