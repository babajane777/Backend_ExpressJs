
 <html>
    <head>
      

        <link rel = "stylesheet" href="css/todo.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
    
        <br>

        
            <form action="/createTodo" method="POST">

             <!-- discription bar -->

                 <div class="form-floating ">
                      <textarea class="form-control" 
                      id="floatingTextarea" style="height: 80px" name="discription" rows="1"></textarea>
                      <label for="floatingTextarea">Todo Discription:</label>
                 </div> 

              
                <br>
                <br>

                <!-- calender bar-->

                <div class="row g-2">
                  <div class="col-md">
                    <div class="form-floating">
                      <input type="Date" class="form-control" id="floatingInputGrid" name="dueDate" style="height:80px">
                      <label for="floatingInputGrid">Due Date</label>
                    </div>
                  </div>

                  <!-- select bar -->

                  <div class="col-md">
                    <div class="form-floating">
                      <select class="form-select" name = "category" id="floatingSelectGrid" aria-label="Floating label select example" style="height:80px">
                        <option value=""></option>
                        <option value="Personal">Personal</option>
                        <option value="Work">Work</option>
                        <option value="School">School</option>
                      </select>
                      <label for="floatingSelectGrid">Category</label>
                    </div>
                  </div>
               </div> 
               <br>
               <br>
               <button  type="submit" onclick="reset()" class="btn btn-danger">Submit</button>

           
            </form>
       <script src ="/Js/todo.js"></script>   
    </body>
</html>